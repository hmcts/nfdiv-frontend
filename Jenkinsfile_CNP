#!groovy

@Library("Infrastructure")

import uk.gov.hmcts.contino.AppPipelineConfig
import uk.gov.hmcts.contino.GithubAPI

def type = "nodejs"
def product = "nfdiv"
def component = "frontend"

def checkForEnableHelmLabel(branch_name) {
  return new GithubAPI(this).getLabelsbyPattern(branch_name, "nightly").contains("nightly")
}

static Map<String, Object> secret(String secretName, String envVariable) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   envVariable: envVariable
  ]
}

def secrets = [
        'nfdiv-${env}'    :[
                secret('e2e-test-user-password', 'TEST_PASSWORD'),
                secret('frontend-secret', 'SERVICE_AUTH_SECRET'),
                secret('idam-secret', 'IDAM_SECRET'),
                secret('pcq-token-key', 'PCQ_TOKEN')
        ]
]

def yarnBuilder = new uk.gov.hmcts.contino.YarnBuilder(this)
def branchesToSync = ['demo', 'perftest', 'ithc']

def pipelineConf = new AppPipelineConfig()
pipelineConf.vaultSecrets = secrets

withPipeline(type, product, component) {
  disableLegacyDeployment()
  loadVaultSecrets(secrets)
  syncBranchesWithMaster(branchesToSync)

  after('build') {
    yarnBuilder.yarn('build')
  }

  after('functionalTest:preview') {
  if (checkForEnableHelmLabel(env.BRANCH_NAME)) {
    yarnBuilder.yarn('test:crossbrowser');
  }
  }

}
