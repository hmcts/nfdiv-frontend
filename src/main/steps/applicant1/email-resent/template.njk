{% from "common/page-link.njk" import pageLink %}

{% extends "common/page.njk" %}

{% block backLink %}{% endblock %}

{% block page_content %}
  <h1 class="govuk-heading-xl">{{ title }}</h1>
  <p class="govuk-inset-text">{{ newAccessDetails }}</p>
  <p class="govuk-body">{{ reviewApplicationDeadline }}</p>
  <p class="govuk-body">{{ yourNotification }}</p>
  {% if isApplicant2EmailUpdatePossibleAnswer %}
    <p class="govuk-body">{{ pageLink(updatePartnersEmailAddress) }}</p>
  {% endif %}
  <p class="govuk-body"><a href="/save-and-sign-out?lng={{language}}" class="govuk-link">{{ saveAndSignOut }}</a></p>
{% endblock %}
