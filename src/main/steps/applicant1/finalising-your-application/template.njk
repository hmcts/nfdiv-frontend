{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "common/page.njk" %}

{% set readMoreContent %}
    <p class="govuk-body">{{ readMore.line1 }}</p>
    <p class="govuk-body">{{ readMore.line2 }}</p>
    <p class="govuk-body">{{ readMore.line3 }}</p>
{% endset %}

{% set readMoreContentJoint %}
  <p class="govuk-body">{{ readMoreJoint.line1 }}</p>
  <p class="govuk-body">{{ readMoreJoint.line2 }}</p>
{% endset %}

{% set readMoreChangeToSole %}
  <p class="govuk-body">{{ readMoreChangeToSole.line1 }}</p>
  <ol class="govuk-list govuk-list--number">
    <li>
      <p class="govuk-body">
        <a class="govuk-link" href="https://assets.publishing.service.gov.uk/government/uploads/system/uploads/attachment_data/file/952032/d36-eng.pdf"
           download="Download-Fill-Out-Application-For-Final-Order">Download and fill out an application for a final order</a>
          {{ readMoreChangeToSole.orderedList1FinalOrder }}
      </p>
    </li>
    <li>
      <p class="govuk-body"> {{ readMoreChangeToSole.orderedList2CertificateOfServicePart1 }}
        <a class="govuk-link" href="https://www.gov.uk/government/publications/form-n215-certificate-of-service"
           download="Download-Fill-Out-Certificate-Of-Service">fill out a 'certificate of service'</a>
        {{ readMoreChangeToSole.orderedList2CertificateOfServicePart2 }}
      </p>
    </li>
    <li>
      <p class="govuk-body">{{ readMoreChangeToSole.orderedList3 }}</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>
          <p class="govuk-body"> {{ readMoreChangeToSole.bulletPoint1Part1 }}
            <a class="govuk-link" href="https://assets.publishing.service.gov.uk/government/uploads/system/uploads/attachment_data/file/952032/d36-eng.pdf"
               download="Download-Fill-Out-Application-For-Final-Order">application for a final order</a>
            {{ readMoreChangeToSole.bulletPoint1Part2 }}
          </p>
        </li>
        <li>

          <p class="govuk-body"> {{ readMoreChangeToSole.bulletPoint2Part1 }}
            <a class="govuk-link" href="https://www.gov.uk/government/publications/form-n215-certificate-of-service"
               download="Download-Fill-Out-Certificate-Of-Service"> 'certificate of service'</a>
            {{ readMoreChangeToSole.bulletPoint2Part2 }}
          </p>
        </li>
      </ul>
    </li>
  </ol>
  <p class="govuk-body">{{ readMoreChangeToSole.line2 }}</p>
{% endset %}

{% block page_content %}
  <h1 class="govuk-heading-l">{{ title }}</h1>
  <p class="govuk-body">{{ line1 }}</p>
  {% if isJointApplication %}
    {{ govukWarningText({
      text: warningText,
      iconFallbackText: "Warning"
    }) }}
    {{ govukDetails({
      summaryText: readMoreJointSubheader,
      html: readMoreContentJoint
    }) }}
    {{ govukDetails({
      summaryText: readMoreChangeToSoleSubHeader,
      html: readMoreChangeToSole
    }) }}
  {% else %}
    {{ govukWarningText({
      text: warningText,
      iconFallbackText: "Warning"
    }) }}
    {{ govukDetails({
      summaryText: readMore.subHeader,
      html: readMoreContent
    }) }}
  {% endif %}
{% endblock %}
