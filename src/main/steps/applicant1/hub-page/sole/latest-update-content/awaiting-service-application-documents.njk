{% from "common/macros/service-address.njk" import serviceAddressMacro %}

<p class="govuk-body">{{ serviceApplicationSubmitted.introLine1 }}</p>

<h3 class="govuk-heading-s">{{ serviceApplicationSubmitted.sendDocumentsHeading }}</h3>
<p class="govuk-body">{{ serviceApplicationSubmitted.sendDocumentsLine1 }}</p>
{% set sendingDocumentsByOnlineForm %}
  <p class="govuk-body">{{ documentsByOnlineFormSteps.line1 }} <a href="{{ contactWebForm }}">{{ documentsByOnlineFormSteps.line2}}</a> </p>
  <p class="govuk-body">{{ documentsByOnlineFormSteps.line3 }}</p>
{% endset %}
{{ govukDetails({
  summaryText: documentsByOnlineForm,
  html: sendingDocumentsByOnlineForm
}) }}
{% set sendingDocumentsByPost %}
  <ol class="govuk-list govuk-list--number">
    {% for property, step in documentsByPostSteps %}
      <li>{{ step }}</li>
    {% endfor %}
  </ol>
  {{ serviceAddressMacro(serviceAddress) }}
{% endset %}
{{ govukDetails({
  summaryText: documentsByPost,
  html: sendingDocumentsByPost
}) }}
{% if serviceApplicationSubmitted.uploadGuidance %}
  <p class="govuk-body">{{ serviceApplicationSubmitted.uploadGuidance }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ serviceApplicationSubmitted.uploadGuidanceBulletOne }}</li>
    <li>{{ serviceApplicationSubmitted.uploadGuidanceBulletTwo }}</li>
    <li>{{ serviceApplicationSubmitted.uploadGuidanceBulletThree }}</li>
  </ul>
{% endif %}

<h3 class="govuk-heading-s">{{ serviceApplicationSubmitted.happensNextHeading }}</h3>
<p class="govuk-body">{{ serviceApplicationSubmitted.happensNextLine1 }}</p>
<p class="govuk-body">{{ serviceApplicationSubmitted.happensNextLine2 }}</p>
<p class="govuk-body">{{ serviceApplicationSubmitted.happensNextLine3 }}</p>
