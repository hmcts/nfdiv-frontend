{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "common/page.njk" %}

{% block backLink %}{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ title }}</h1>

      <div class="govuk-body">
        {{ referenceNumber }}
      </div>

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break--additional">

      {% include "../../common/progress-bar.njk" %}

      <h2 class="govuk-heading-m">{{ subHeading1 }}</h2>
      <div class="govuk-panel govuk-panel--outstanding">
        {% if isJointApplication %}
          {% block jointLatestUpdate %}
            {% include "./joint/hub.njk" %}
          {% endblock %}
        {% else %}
          {% block soleLatestUpdate %}
            {% include "./sole/hub.njk" %}
          {% endblock %}
        {% endif %}
      </div>
      <p class="govuk-body">{{ reviewContactDetails | safe }}</p>
      <p class="govuk-body">{{ hubPageDownloads | safe }}</p>
      {% if featureFlags.NFD_GenAppsReleased %}
        {% if isPreIssue %}
          <p class="govuk-body">{{ preIssueMakeAnApplication | safe }}</p>
        {% endif %}
      {% endif %}
      <p class="govuk-body">{{ withdrawApplication | safe }}</p>
    </div>

    <div class="govuk-grid-column-one-third hub-right-column">
      {% include "./right-column/template.njk" %}
    </div>
  </div>
{% endblock %}

{% block contact_us %}{% endblock %}
