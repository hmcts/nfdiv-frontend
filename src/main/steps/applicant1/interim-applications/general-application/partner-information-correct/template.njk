{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "common/macros/service-address.njk" import serviceAddressMacro %}

{% extends "common/page.njk" %}

{% block page_content %}
  <h1 class="govuk-heading-l" id="partnerInformationCorrectTitle">{{ title }}</h1>
  <p class="govuk-body">{{ line1 }}</p>

  {% set contactDetailsRows = [] %}
      {% set contactDetailsRows = (contactDetailsRows.push({
        key: {
          html: homeAddress,
          classes: ''
        },
        value: {
          text: applicant2Address | safe
        }
      }), contactDetailsRows) %}
      {% set contactDetailsRows = (contactDetailsRows.push({
          key: {
            html: emailAddress,
            classes: ''
          },
          value: {
            text: applicant2Email | safe
          }
        }), contactDetailsRows) %}

      {{ govukSummaryList({
        classes: 'govuk-!-margin-bottom-7',
        rows: contactDetailsRows
      }) }}

{% endblock %}

{% block form %}
  {% include "./form.njk" %}
{% endblock %}
