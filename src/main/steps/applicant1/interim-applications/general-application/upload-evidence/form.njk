{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "common/macros/service-address.njk" import serviceAddressMacro %}

{% extends "common/form/form.njk"%}

{% block form_content %}

  {% for fieldName, field in form.fields %}
    {% if fieldName == 'applicant1GenAppStatementOfEvidence' %}
        <p class="govuk-body">
          <h2 id="uploadAFile" class="govuk-heading-s">{{ statementLabel }}</h2>
        </p>
        {% include "common/form/fields/" + field.type + ".njk" %}
    {% elseif fieldName == 'applicant1InterimAppsCannotUploadDocs' %}
      {% include "common/form/fields/" + field.type + ".njk" %}
    {% elseif fieldName == 'applicant1InterimAppsEvidenceUploadedFiles'%}
      <p class="govuk-body">
        <h2 id="uploadAFile" class="govuk-heading-s">{{ uploadFilesLabel }}</h2>
        <p class="govuk-body">{{ line1 | safe }}</p>
        <p class="govuk-body">{{ line2 }}</p>
        <p class="govuk-body">{{ line3 }}</p>
        <strong>{{ acceptedFileFormats }}</strong> {{ fileFormats }}<br>
        <strong>{{ maximumFileSize }}</strong> {{ fileSize }}
      </p>

      {% include "common/form/fields/" + field.type + ".njk" %}

      {% include "./document-upload.njk" %}
    {% else %}
      {% include "common/form/fields/" + field.type + ".njk" %}
    {% endif %}
  {% endfor %}

{% endblock %}
