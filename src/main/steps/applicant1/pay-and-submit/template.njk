{% from "govuk/components/details/macro.njk" import govukDetails %}

{% extends "common/page.njk" %}

{% block backLink %}{% endblock %}

{% block form %}
  {% include "../pay-your-fee/form.njk" %}
{% endblock %}

{% block page_content %}
  <h1 class="govuk-heading-l">{{ title }}</h1>
  <p class="govuk-body">{{ line1 }}</p>
  {% if userCase.applicant1AlreadyAppliedForHelpPaying === 'Yes' and userCase.applicant2AlreadyAppliedForHelpPaying !== 'Yes' %}
    <p class="govuk-body">{{ line2 }}</p>
    {% set summary %}
      <p class="govuk-body">{{ line3 }}</p>
      <p class="govuk-body">{{ line4 }}</p>
      <p class="govuk-body">{{ line5 | safe }}</p>
    {% endset %}
    {{ govukDetails({
      summaryText: detailsHeading,
      html: summary
    }) }}
  {% endif %}
  <p class="govuk-body">{{ line6 }}</p>
  <p class="govuk-body">{{ line7 | safe }}</p>
{% endblock %}
