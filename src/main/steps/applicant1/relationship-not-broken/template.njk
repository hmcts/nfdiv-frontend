{% extends "common/page.njk" %}

{% block page_content %}
  <h1 class="govuk-heading-xl">{{ title }}</h1>
  <p class="govuk-body">{{ line1 }}</p>
  {% if isJointApplication %}
    <p class="govuk-body">{{ line3 }}</p>
    <p class="govuk-body">{{ line4 }}</p>
  {% else %}
    <p class="govuk-body">{{ line2 | safe }}</p>
    <p class="govuk-body"><a href="/logout" class="govuk-link">{{ signOut }}</a></p>
  {% endif %}
{% endblock %}
