{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% extends "common/form/form.njk"%}

{% set hintTemplate %}
  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ reasonInformationNotCorrect.heading1 }}</h3>
  <p class="govuk-body govuk-!-margin-bottom-2">
    {{ reasonInformationNotCorrect.part1 }} <a class="govuk-link" href="{{ reasonInformationNotCorrect.link }}">{{ reasonInformationNotCorrect.linkText }}</a>{{ reasonInformationNotCorrect.part2 }}
  </p>
  <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ reasonInformationNotCorrect.heading2 }}</h3>
  <p class="govuk-body">{{ reasonInformationNotCorrect.part3 }}</p>
  {{ reasonInformationNotCorrectHint }}
{% endset %}

{% set textArea %}
  {{ govukTextarea({
        id: 'applicant1ReasonInformationNotCorrect',
        name: 'applicant1ReasonInformationNotCorrect',
        label: {
          text: title,
          classes: "govuk-visually-hidden"
        },
        hint: {
          html: hintTemplate
        },
        value: userCase.applicant1ReasonInformationNotCorrect,
        formGroup: {
          classes: 'applicant1ReasonInformationNotCorrect'
        }
     })
  }}
{% endset %}

{% block form_content %}
  {{ govukRadios({
        classes: 'govuk-radios',
        idPrefix: 'applicant1ConfirmInformationStillCorrect',
        name: 'applicant1ConfirmInformationStillCorrect',
        fieldset: {
          legend: {
            text: confirmInformationStillCorrect,
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: [
          { text: yes, value: 'Yes', checked: userCase.applicant1ConfirmInformationStillCorrect == 'Yes' },
          {
            text: no,
            value: 'No',
            checked: userCase.applicant1ConfirmInformationStillCorrect == 'No',
            conditional: {
              html: textArea
            }
          }
        ],
        errorMessage: getError('applicant1ConfirmInformationStillCorrect'),
        formGroup: {
          classes: 'applicant1ConfirmInformationStillCorrect'
        }
  }) }}
{% endblock %}
