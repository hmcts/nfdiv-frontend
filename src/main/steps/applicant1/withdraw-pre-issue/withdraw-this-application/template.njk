{% from "govuk/components/button/macro.njk" import govukButton %}
{% extends "common/page.njk" %}

{% block page_content %}
  <h1 class="govuk-heading-xl" id="withdrawThisApplicationTitle">{{ title }}</h1>
  <p class="govuk-body">{{ line1 }}</p>
  <p class="govuk-body">{{ line2 }}</p>
  {% if isJointApplication %}
    <p class="govuk-body">{{ line3joint }}</p>
  {% else %}
    <p class="govuk-body">{{ line3sole }}</p>
  {% endif %}

  <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-visually-hidden">Warning</span>
        {{ warningText }}
      </strong>
   </div>
{% endblock %}

{% block form %}
  {% include "./form.njk" %}
{% endblock %}
