<ul class="govuk-list contact-us">
  <li>
    <h4 class="govuk-heading-s">{{ webChat }}</h4>
    {% if globals.webchat.useGenesys %}
      {% include "../../webchat/genesys-webchat.njk" %}
    {% else %}
      {% include "../../webchat/link-to-webchat.njk"%}
    {% endif %}
  </li>

  <li>
    <h4 class="govuk-heading-s">{{ sendUsAMessage }}</h4>
    <a class="govuk-link" href="{{ contactWebForm }}">{{ sendUsAMessage }}</a>
  </li>

  <li>
    <h4 class="govuk-heading-s">{{ telephone }}</h4>
    <p class="govuk-body">{{ telephoneNumber }}</p>
  </li>

  <li>
    <h4 class="govuk-heading-s">{{ openingTimesHeading }}</h4>
    <p class="govuk-body">{{ openingTimes }}</p>
    <p class="govuk-body">{{ closingTimes }}</p>
  </li>
</ul>

{% if not globals.webchat.useGenesys %}
<script src="https://{{ globals.webchat.avayaClientUrl }}/chat-client/{{ avayaClientUrlFolder }}/app-es2015.js" defer type="module" crossorigin="anonymous"></script>
<script src="https://{{ globals.webchat.avayaClientUrl }}/chat-client/1/app-es5.js" nomodule defer crossorigin="anonymous"></script>
{% endif %}
