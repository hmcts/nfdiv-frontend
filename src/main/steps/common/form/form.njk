{% from "govuk/components/button/macro.njk" import govukButton %}

<form class="form" id="main-form" method="post" action="" novalidate="novalidate">
  <input type="hidden" name="_csrf" id="csrfToken" value="{{ csrfToken }}">
  {% block form_content %}
    {% include "./fields.njk" %}
  {% endblock %}

  {% block after_fields %}{% endblock %}

  <div class="govuk-form-group">
    {{ govukButton({
      text: getContent(form.submit.text),
      classes: form.submit.classes,
      type: "submit",
      preventDoubleClick: true,
      attributes: {
        id: 'main-form-submit'
      }
    }) }}

    {% block after_form %}{% endblock %}

    {% block save_and_sign_out %}
      <p class="govuk-body">
        <button class="hmcts-button-link disable-upon-submit" type="submit" name="saveAndSignOut" value="true" data-prevent-double-click="true" data-module="govuk-button" />
          {{ saveAndSignOut }}
        </button>
      </p>
    {% endblock %}
  </div>
</form>
