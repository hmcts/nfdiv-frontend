{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}

{% extends "govuk/template.njk" %}

{% block head %}
  {% include "./webpack/css.njk" %}
  <!-- {{ userCase.id }} -->
  <script>
    window.dataLayer = window.dataLayer || [];
    dataLayer.push({"language": "en", "event": "Site language"})

    const nfdivCookie = document.cookie.match(new RegExp('(^| )' + 'nfdiv-cookie-preferences' + '=([^;]+)'));
    if(nfdivCookie) {
      const cookiePreferences = JSON.parse(decodeURIComponent(nfdivCookie[2]));
      dataLayer.push({'event': 'Cookie Preferences', 'cookiePreferences': cookiePreferences});
    }
  </script>
  <!-- Google Tag Manager -->
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
        new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-WG59GG2');</script>
  <!-- End Google Tag Manager -->

{% endblock %}

{% block header %}
  {% include "../cookie-banner/template.njk" %}
  {{ govukHeader({
    containerClasses: "govuk-width-container",
    serviceName: serviceName,
    serviceUrl: (globals.basePath if globals.basePath) + "/",
    navigation: [
      {
        href: "/logout" if isLoggedIn else "/login",
        text: signOut if isLoggedIn else signIn
      }
    ]
  }) }}
{% endblock %}

{% block pageTitle %}
  {{ serviceName }} - {{ title }} - {{ govUk }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: phase
    },
    html: feedback + languageToggle
  }) }}
  {% block backLink %}
    <a href="#" class="govuk-back-link">{{ back }}</a>
  {% endblock %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% block error_summary %}
        {% include "common/error/summary.njk" %}
      {% endblock %}

      {% block page_content %}
        {% if title %}
          <h1 class="govuk-heading-l">{{ title }}</h1>
        {% endif %}
      {% endblock %}

      {% if form %}
        {% block form %}
          {% include "common/form/form.njk"%}
        {% endblock %}
      {% endif %}

      {% block contact_us %}
        {% include "./contact-us.njk" %}
      {% endblock %}
    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "/cookies",
          text: cookies
        },
        {
          href: "/privacy-policy",
          text: privacyPolicy
        },
        {
          href: "/accessibility-statement",
          text: accessibility
        },
        {
          href: "/terms-and-conditions",
          text: termsAndConditions
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "./webpack/js.njk" %}
  <script src="https://{{ globals.webchat.avayaClientUrl }}/chat-client/1/app-es2015.js" defer type="module" crossorigin="anonymous"></script>
  <script src="https://{{ globals.webchat.avayaClientUrl }}/chat-client/1/app-es5.js" nomodule defer crossorigin="anonymous"></script>
{% endblock %}
