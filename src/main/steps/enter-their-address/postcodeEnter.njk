{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

<div id="enterPostcode">
  <form id="postcodeLookup">
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">

    {{ govukInput({
      id: "postcode",
      name: "postcode",
      classes: "govuk-input--width-10",
      label: {
        text: enterPostcode
      }
    }) }}

    {{ govukButton({
      attributes: {
        id: "findAddressButton"
      },
      text: findAddress,
      type: "submit",
      preventDoubleClick: true
    }) }}
  </form>

  <p class="govuk-body">
    <a href="#" id="cannot-enter-uk-postcode" class="govuk-link">{{ notUK }}</a>
  </p>
</div>
