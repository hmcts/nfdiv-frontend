{% extends "../../applicant1/hub-page/template.njk" %}

{% block soleLatestUpdate %}
  {% if displayState.state() == 'FinalOrderRequested' %}
    {% include "../../applicant1/hub-page/sole/latest-update-content/final-order-requested.njk" %}

  {% elif displayState.state() == 'AwaitingFinalOrder' or userCase.state == 'FinalOrderOverdue' %}
    {% include "./latest-update-content/awaiting-final-order-or-final-order-overdue.njk" %}

  {% elif displayState.state() == 'ConditionalOrderPronounced' %}
    {% include "./latest-update-content/conditional-order-pronounced.njk" %}

  {% elif displayState.state() == 'ClarificationSubmitted' %}
    {% include "./latest-update-content/clarification-submitted.njk" %}

  {% elif displayState.state() == 'AwaitingLegalAdvisorReferral' or displayState.state() == 'AwaitingPronouncement' %}
    {% include "./latest-update-content/awaiting-legal-advisor-referral-or-awaiting-pronouncement.njk" %}

  {% elif displayState.state().isAtOrBefore('AwaitingConditionalOrder') and not hasSubmittedAos %}
    {% include "./latest-update-content/awaiting-aos.njk" %}

  {% elif displayState.state() == 'AwaitingGeneralConsideration' %}
    {% include "./latest-update-content/awaiting-general-consideration.njk" %}

  {% elif displayState.state() == 'Holding' %}
    {% include "./latest-update-content/holding.njk" %}

  {% endif %}
{% endblock %}
